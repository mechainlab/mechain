        vk.gamma2 = Pairing.G2Point([uint256(4578920291453849983301502576248862825012103218907219355682593661590008269793), uint256(3841661552504960056639534505784778841902106740586003422807657450053888063309)], [uint256(13801315593023151451116176617265319104066711472345714880930432891512301257149), uint256(16670706998452145125314271563257906339555100035967626125520012134750306320795)]);
